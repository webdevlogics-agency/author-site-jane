---
import BaseLayout from '~/layouts/base-layout.astro'
import NewsletterForm from '~/components/newsletter-form.astro'

import { SITE_TITLE_EVENTS } from '~/consts'

const eventArray = [
  {
    date: 'October 21, 2023',
    time: '5:00 PM',
    place: 'Good Theatre',
    note: 'Note: Tickets include a signed copy of Good Times',
  },
  {
    date: 'December 15, 2023',
    time: '7:00 PM',
    place: 'Haunting Theatre',
    note: 'Note: Tickets include a signed copy of Good Times',
  },
]
---

<BaseLayout site_title={SITE_TITLE_EVENTS}>
  <section id='events' class='my-3 md:my-24'>
    <div class='container m-auto max-w-7xl p-6'>
      <div class='grid grid-cols-1 gap-4 md:grid-cols-2'>
        <NewsletterForm title='EVENTS' />
        <div class='flex flex-col gap-12'>
          {
            eventArray.map((event) => (
              <div class='flex flex-col gap-4'>
                <p class='font-bold'>{event.date}</p>
                <p>{event.time}</p>
                <p>{event.place}</p>
                <p>{event.note}</p>
                <button class='w-48 rounded-full bg-orange-200 px-4 py-2 font-bold text-black hover:bg-sky-600 hover:text-foreground'>
                  Get Tickets
                </button>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
